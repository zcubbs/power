# nginx stable-alpine3.17 sha256:2d32417c7e19818c490ba14ea9f41484cf500456b7f28f796d1698a3a2d0c3aa
FROM nginx@sha256:2d32417c7e19818c490ba14ea9f41484cf500456b7f28f796d1698a3a2d0c3aa

# Set dist path
ARG DIST_PATH

# Copy nginx config
COPY build/nginx.conf /etc/nginx/nginx.conf

# Copy dist path files to nginx
COPY $DIST_PATH /usr/share/nginx

# Expose port 80
EXPOSE 80

# Run nginx
CMD ["nginx", "-g", "daemon off;"]
